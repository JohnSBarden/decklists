---
import Layout from '../layouts/Layout.astro';
import DeckCard from '../components/DeckCard.astro';
import { decks } from '../data/decks';
import Navigation from '@/components/Navigation.astro';

const sampleDecks = decks;

---

<Layout title="My Decks - Johnny's MTG Collection">
  <Navigation />
  <div class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <main class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-[var(--color-accent-primary)] mb-8 text-center">My Decks</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {sampleDecks.map((deck) => (
        <DeckCard
          name={deck.name}
          commander={deck.commander}
          format={deck.format}
          description={deck.description}
          colors={deck.colors}
          image={deck.image}
        />
      ))}
    </div>
  </main></div>
</Layout>
