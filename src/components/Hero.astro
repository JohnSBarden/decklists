<div class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900 via-slate-900 to-black"></div>
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(76,29,149,0.3)_0%,rgba(0,0,0,0)_50%)] animate-pulse"></div>
    </div>
    <!-- Magic card pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="h-full w-full bg-[url('/card-pattern.svg')] bg-repeat"></div>
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-5xl mx-auto">
    <div class="space-y-8">
      <h1 class="text-5xl sm:text-7xl font-extrabold">
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 animate-gradient">
          Johnny's
        </span>
        <span class="block text-white mt-2">MTG Collection</span>
      </h1>
      
      <p class="text-xl sm:text-2xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
        Explore my carefully crafted Magic: The Gathering decks, 
        <span class="text-purple-400">strategies</span>, and 
        <span class="text-pink-400">favorite combinations</span>.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
        <a href="/decks" class="transform hover:scale-105 transition-all duration-300">
          <button class="px-8 py-3 bg-gradient-to-r from-purple-600 to-pink-600 rounded-lg font-bold text-white shadow-lg hover:shadow-purple-500 hover:shadow-opacity-25 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-slate-900">
            View My Decks
          </button>
        </a>
        <a href="/about" class="transform hover:scale-105 transition-all duration-300">
          <button class="px-8 py-3 bg-transparent border-2 border-purple-500 border-opacity-50 rounded-lg font-bold text-white hover:bg-purple-500 hover:bg-opacity-10 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-slate-900">
            About Me
          </button>
        </a>
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-purple-500 to-transparent"></div>
</div>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .animate-gradient {
    background-size: 200% auto;
    animation: gradient 8s linear infinite;
  }
</style>
